{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "baseUrl": ".",
    "moduleResolution": "NodeNext",
    "useDefineForClassFields": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "noImplicitAny": false,
    "noEmit": true
  },
  "include": [
    "index.js",
    "bin/**/*",
    "cli/**/*",
    "examples/**/*",
    "lib/**/*",
    "test/**/*",
    "types/**/*"
  ]
}
